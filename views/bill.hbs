<div onload="sum(4)">
    <div style="margin-left: 40px;">
        <h3>Hey {{name}} your bill is : {{total}}</h3>
    </div><br>

    <table style="text-align: center;" border="10" cellspacing="2" cellpadding="1" id="billTable" class="table table-striped table-bordered table-sm">
        <thead>
            <th></th> 
            <th>Name</th> 
            <th>Dresscode</th>
            <th>Size</th>
            <th>Price</th>
        </thead>
        {{#each products}}
        <tbody>
            <tr>
                <td><a href="/product/view{{this.id}}"><button class="btn"><i class="fas fa-eye links"></i> </button></a></td>
                <td>{{this.name}}</td>
                <td>{{this.dresscode}}</td>
                <td>{{this.size}}</td>
                <td>{{this.price}}</td>
            </tr>
        </tbody>
        {{/each}}
        <tfoot>
            <tr>
                <td colspan="4" style="text-align: right;">Billing Amount >></td>
                <td style="border: 2px solid black;">{{total}}</td>
            </tr>
        </tfoot>
    </table>
    <div>
        <a class="btn" style="float:right; margin-right:20px; background-color: green; color: white;" href="/cart/cod/{{uid}}"><i class="fa fa-money"></i> Cash on Delivery</a>
    </div>
</div>